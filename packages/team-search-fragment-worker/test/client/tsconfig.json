{
  "compilerOptions": {
    "types": ["mocha"],
    "target": "esnext",
    "module": "es2015",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "../../transpiled/client",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  "include": ["./*.ts"],
  "exclude": []
}
